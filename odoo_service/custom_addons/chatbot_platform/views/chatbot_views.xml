<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Chatbot Tree View -->
    <record id="view_chatbot_tree" model="ir.ui.view">
        <field name="name">chatbot.chatbot.tree</field>
        <field name="model">chatbot.chatbot</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="status"/>
                <field name="document_count"/>
                <field name="link_count"/>
                <field name="is_public"/>
                <field name="created_at"/>
            </list>
        </field>
    </record>

    <!-- Chatbot Form View -->
    <record id="view_chatbot_form" model="ir.ui.view">
        <field name="name">chatbot.chatbot.form</field>
        <field name="model">chatbot.chatbot</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_activate" type="object" string="Activate" 
                            class="oe_highlight" invisible="status == 'active'"/>
                    <button name="action_deactivate" type="object" string="Deactivate" 
                            invisible="status != 'active'"/>
                    <button name="action_regenerate_api_key" type="object" string="Regenerate API Key" 
                            class="btn-warning"/>
                    <field name="status" widget="statusbar" statusbar_visible="draft,active,archived"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Chatbot Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="description"/>
                            <field name="user_id"/>
                            <field name="is_public"/>
                        </group>
                        <group>
                            <field name="api_key_display" readonly="1" widget="text"/>
                            <field name="api_key_is_hidden" invisible="1"/>
                            <div class="oe_inline">
                                <button name="action_show_full_api_key" type="object" string="Show Full Key" 
                                        class="btn-primary" invisible="not api_key_is_hidden"/>
                                <button name="action_hide_api_key" type="object" string="Hide Key" 
                                        class="btn-secondary" invisible="api_key_is_hidden"/>
                            </div>
                            <field name="allowed_domains"/>
                            <field name="created_at" readonly="1"/>
                            <field name="updated_at" readonly="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Documents" name="documents">
                            <field name="document_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="file_type"/>
                                    <field name="file_size"/>
                                    <field name="vector_sync_status"/>
                                    <field name="uploaded_at"/>
                                    <button name="action_retry_sync" type="object" 
                                            string="Retry Sync" icon="fa-refresh"
                                            invisible="vector_sync_status == 'synced'"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Links" name="links">
                            <field name="link_ids">
                                <list editable="bottom">
                                    <field name="url"/>
                                    <field name="title"/>
                                    <field name="vector_sync_status"/>
                                    <field name="created_at"/>
                                    <button name="action_retry_sync" type="object" 
                                            string="Retry Sync" icon="fa-refresh"
                                            invisible="vector_sync_status == 'synced'"/>
                                    <button name="action_rescrape" type="object" 
                                            string="Re-scrape" icon="fa-download"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Prompts" name="prompts">
                            <field name="prompt_ids">
                                <list editable="bottom">
                                    <field name="prompt_type"/>
                                    <field name="prompt_text"/>
                                    <field name="order"/>
                                    <field name="is_active"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Embed Code" name="embed_code">
                            <group>
                                <field name="embed_code" widget="text" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Chatbot Kanban View -->
    <record id="view_chatbot_kanban" model="ir.ui.view">
        <field name="name">chatbot.chatbot.kanban</field>
        <field name="model">chatbot.chatbot</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="status"/>
                <field name="document_count"/>
                <field name="link_count"/>
                <field name="is_public"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_manage_button_section">
                                        <a class="o_kanban_manage_toggle_button" href="#">
                                            <i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/>
                                        </a>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <span class="badge badge-pill" t-attf-class="badge-#{record.status.raw_value == 'active' ? 'success' : 'secondary'}">
                                        <field name="status"/>
                                    </span>
                                    <br/>
                                    <t t-if="record.document_count.raw_value">
                                        <i class="fa fa-file-text-o"/> <field name="document_count"/> documents
                                    </t>
                                    <t t-if="record.link_count.raw_value">
                                        <br/><i class="fa fa-link"/> <field name="link_count"/> links
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Chatbot Action -->
    <record id="action_chatbot" model="ir.actions.act_window">
        <field name="name">Chatbots</field>
        <field name="res_model">chatbot.chatbot</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first chatbot!
            </p>
            <p>
                Create chatbots with documents and links to provide intelligent responses to your users.
            </p>
        </field>
    </record>
</odoo>
