<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Tree View -->
    <record id="view_document_tree" model="ir.ui.view">
        <field name="name">chatbot.document.tree</field>
        <field name="model">chatbot.document</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="chatbot_id"/>
                <field name="file_type"/>
                <field name="file_size"/>
                <field name="vector_sync_status"/>
                <field name="processed"/>
                <field name="uploaded_at"/>
            </tree>
        </field>
    </record>

    <!-- Document Form View -->
    <record id="view_document_form" model="ir.ui.view">
        <field name="name">chatbot.document.form</field>
        <field name="model">chatbot.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_retry_sync" type="object" string="Retry Sync" 
                            class="oe_highlight" invisible="vector_sync_status == 'synced'"/>
                    <field name="vector_sync_status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="chatbot_id"/>
                            <field name="file_type"/>
                            <field name="file_path"/>
                        </group>
                        <group>
                            <field name="file_size"/>
                            <field name="processed" readonly="1"/>
                            <field name="uploaded_at" readonly="1"/>
                            <field name="updated_at" readonly="1"/>
                        </group>
                    </group>
                    <group string="Extracted Content">
                        <field name="content" widget="text" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Document Action -->
    <record id="action_document" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">chatbot.document</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Link Tree View -->
    <record id="view_link_tree" model="ir.ui.view">
        <field name="name">chatbot.link.tree</field>
        <field name="model">chatbot.link</field>
        <field name="arch" type="xml">
            <tree>
                <field name="url"/>
                <field name="title"/>
                <field name="chatbot_id"/>
                <field name="vector_sync_status"/>
                <field name="processed"/>
                <field name="created_at"/>
            </tree>
        </field>
    </record>

    <!-- Link Form View -->
    <record id="view_link_form" model="ir.ui.view">
        <field name="name">chatbot.link.form</field>
        <field name="model">chatbot.link</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_retry_sync" type="object" string="Retry Sync" 
                            class="oe_highlight" invisible="vector_sync_status == 'synced'"/>
                    <button name="action_rescrape" type="object" string="Re-scrape Content" 
                            class="btn-secondary"/>
                    <field name="vector_sync_status" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="url"/>
                            <field name="title"/>
                            <field name="chatbot_id"/>
                        </group>
                        <group>
                            <field name="processed" readonly="1"/>
                            <field name="created_at" readonly="1"/>
                            <field name="updated_at" readonly="1"/>
                        </group>
                    </group>
                    <group string="Scraped Content">
                        <field name="content" widget="text" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Link Action -->
    <record id="action_link" model="ir.actions.act_window">
        <field name="name">Links</field>
        <field name="res_model">chatbot.link</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
